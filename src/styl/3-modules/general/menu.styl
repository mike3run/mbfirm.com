#main-nav
  height: 90px
  padding: 20px 7%
  background: white
  display: flex
  align-items: center

  a
    display: inline-block

  span
    font-family lato-light
    fs(1.44rem)
    line-height: (17/14.4)
    color blue-light

  .left
    margin-right: auto

  .right
    margin-left: auto
    display: flex
    align-items: center

  .logo
    max-width 133px

  .icon--phone
    font-family lato-light
    fs(1.44rem)
    line-height: (17/14.4)
    color blue-light
    padding 2px 0px 2px 25px
    content ''
    display: block
    background url('../svg/phone.svg') no-repeat
    background-size: contain

  .toggle
    cursor  pointer
    content ''
    width 25px
    height 16px
    margin-left: 40px
    display: flex;
    align-items: center;

    +e(burger)
      position: relative

      &, &::before, &::after
        content ''
        display: block
        width 100%
        height 2px
        background #2D3E50

      &::before
        position: absolute
        bottom 6px

      &::after
        position: absolute
        top 6px

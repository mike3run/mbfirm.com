.body
  padding: 40px 60px
  cf()

  .sidebar
    +above(2)
      column(4/12)
    +above(3)
      column(3/12, offset: 1/12)

    h2
      fs(2.254rem)
      line-height: (36/22.54)
      margin-bottom: 20px
      color blue-light
      line-height: 1.4

      +above(3)
        fs(2.8rem)
        line-height: (36/28)

    ul
      list-style-type: square
      color blue-light

    li
      fs(1.44rem)
      line-height: (17/14.4)
      margin-bottom: 20px
      color blue-light

    p
      fs(1.44rem)
      line-height: (17/14.4)
      margin-bottom: 20px

    .icon
      display: block
      font-family: museo-300
      fs(1.6rem)
      line-height: (19/16)
      color blue-light
      padding-left: 65px
      margin-bottom: 50px
      position: relative

      &:first-child
        margin-top: 20px

      &::before
        content ''
        width: 55px
        height 55px
        position: absolute
        border-radius: 50%
        bottom -8px
        left 0

      &--phone::before
        background url('../svg/phone-round.svg') no-repeat center / 18px, red

      &--fax::before
        background url('../svg/fax.svg') no-repeat center / 20px, red

      &--mail::before
        background url('../svg/mail.svg') no-repeat center / 23px, red

  .contents
    +above(2)
      column(7/12, offset: 1/12)
    +above(3)
      column(6/12, offset: 1/12)
    h2
      margin-bottom: 30px
      margin-top: 20px
      line-height: 1.4

    h3
      margin-bottom: 30px
      line-height: 1.4

    .blue-light
      color blue-light

    .gray
      color black

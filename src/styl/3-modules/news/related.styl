#related
  padding: 40px 0 110px

  .flexy-row
    display: flex
    flex-wrap: wrap
    justify-content: center

  .related
    background: url('../img/textslider3.jpg') no-repeat center / cover
    max-width 100%
    flex-basis 100%
    height 320px
    position: relative
    margin-bottom: 40px

    +above(2)
      max-width 48.75%
      flex-basis 48.75%
      height 265px
      margin-bottom 2%
      &:nth-child(2n+1)
        margin-right 2.5%

    +above(3)
      max-width 30%
      flex-basis 30%
      margin-right: 2.5%
      &:nth-child(2n+1)
        margin-right 2.5%
      &:nth-child(3n+3)
        margin-right 0

    .overlay
      background: rgba(blue, 0.5)
      height: 320px
      display: flex
      flex-direction: column
      justify-content: flex-end
      padding: 30px 15px
      color white
      +above(2)
        height 265px

      &__title
        margin-bottom: 10px

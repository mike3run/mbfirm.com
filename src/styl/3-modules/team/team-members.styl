#team-members
  padding: 50px 0 100px
  .partner
    text-align: center
    height auto
    column(1/3, cycle: 3)

    &__info
      padding 30px 15px 3px
      background white

    &__borders
      margin: 10px

    &__name
      display: block
      font-family: museo-300
      fs(2.24rem)
      line-height: (30/22.4)
      color blue-light
      padding-bottom: 0

    &__title
      display: block
      font-family: lato-light
      fs(2.2rem)
      line-height: (34/22)
      color #B8B8B8

#team-body-mobile
  padding: 40px 0

  +above(2)
    display: none

  .container
    max-width 80%

  .icon
    display: block
    font-family: museo-300
    fs(1.6rem)
    line-height: (19/16)
    color blue-light
    padding-left: 65px
    margin-bottom: 50px
    position: relative

    &:first-child
      margin-top: 20px

    &::before
      content ''
      width: 55px
      height 55px
      position: absolute
      border-radius: 50%
      bottom -8px
      left 0

    &--phone::before
      background url('../svg/phone-round.svg') no-repeat center / 18px, red

    &--fax::before
      background url('../svg/fax.svg') no-repeat center / 25px, red

    &--mail::before
      background url('../svg/mail.svg') no-repeat center / 23px, red

  .toggles
    cf()
    text-align: center
    max-width: 90%
    margin: 30px auto

  .button--solid
    column(1/2, gutter:11)
    display: block
    font-family: museo-300
    fs(1.6rem)
    line-height: (36/16)
    color red
    border 1px solid red
    border-radius 100px
    padding: 3px 0
    transition: trns-default
    cursor pointer

    +is(selected)
      background: red
      color white

  #info
    display: none
    color blue-light
    margin: 0 auto
    max-width: 65%

    h2
      fs(2.254rem)
      line-height: (36/22.54)
      margin-bottom: 20px

    ul
      list-style-type: square

    li
      fs(1.44rem)
      line-height: (17/14.4)
      margin-bottom: 20px

    p
      fs(1.44rem)
      line-height: (17/14.4)
      margin-bottom: 20px

    +is(selected)
      display: block

  #about
    display: none

    p
      fs(1.76rem)
      line-height: (26.4/17.6)
      margin-bottom: 40px

    +is(selected)
      display: block

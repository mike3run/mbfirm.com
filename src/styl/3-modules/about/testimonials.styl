/*!**
  title: Videos
  section: About
  example: |
    .video
      span.video__title Billy's Story
      span.video__description Mesothelioma & Asbestos
***/

#testimonials
  .blue-relative
    content ''
    min-height 300px
    background: blue
    color white
    width 100%
    position: relative
    z-index: -2
    +above(2)
      padding-top: 20px

    h1
      text-align: center

  .white-relative
    content ''
    min-height 300px
    width 100%
    z-index: -3
    position: relative

  .videos
    z-index: -1
    max-width: 95%
    margin: -150px auto 0
    cf()
    +above(4)
      max-width: 85%
      margin: -180px auto 0

  .video
    background linear-gradient(rgba(blue, 0.5), rgba(blue, 0.5)) , url('../img/hero2.jpg') no-repeat center / cover
    min-height 283px
    color white
    display: flex
    flex-direction: column
    justify-content: flex-end
    margin-bottom: 25px
    position: relative
    padding: 30px
    transition: background 0.3s ease

    &:hover
      background linear-gradient(rgba(blue, 0.7), rgba(blue, 0.7)) , url('../img/hero2.jpg') no-repeat center / cover

    +above(2)
      column(1/2, cycle: 2)
      min-height: 198px
    +above(3)
      min-height: 258px
    +above(4)
      min-height: 305px
    +above(5)
      min-height: 326px

    &::before
      content ''
      width 77px
      height: 77px
      background url('../img/play.png') no-repeat center / cover
      align(both)
      +above(2)
        width 54px
        height: 54px
      +above(3)
        width 70px
        height: 70px
      +above(4)
        width 82px
        height: 82px
      +above(5)
        width 88px
        height: 88px


    &__title
      fs(2.24rem)
      line-height: (27/22.4)
      font-family: museo-300
      display: block
      +above(4)
        fs(2.8rem)
        line-height: (33/28)

    &__description
      fs(1.44rem)
      line-height: (17/14.4)
      font-family: lato-light
      display: block
      +above(4)
        fs(1.8rem)
        line-height: (22/18)

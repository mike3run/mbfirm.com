#pull-quotes
  .white-relative
    content ''
    min-height 300px
    width 100%
    margin-top: 410px
    +above(2)
      margin-top: 375px
    +above(3)
      margin-top: 220px
    +above(4)
      margin-top: 340px

  .partners
    margin-bottom: 0
    bottom 0
    +above(3)
      display: none

  .partner
    max-width: 280px
    text-align: center
    height auto
    // cursor pointer Just in case each member triggers a quote or something
    +above(3)
      max-width: 208px

    &__info
      padding 30px 5px 3px
      background white

    &__borders
      margin: 10px

    &__name
      display: block
      font-family: museo-300
      fs(2.24rem)
      line-height: (30/22.4)
      color blue-light
      padding-bottom: 0

    &__title
      display: block
      font-family: lato-light
      fs(2.2rem)
      line-height: (34/22)
      color #B8B8B8

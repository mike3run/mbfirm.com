#graphic-slider
  background blue
  color white
  padding 85px 30px 60px
  +above(4)
    padding: 60px 50px 65px

  p
    fs(1.7rem)
    line-height: (27/17)

  .slider
    margin-bottom: 0

  .slide
    position: relative
    height auto
    +above(4)
      height 610px

    &--1
      &:before
        content ''
        position: absolute
        opacity 0.05
        width: 100%
        height 100%
        z-index 1
        background url('../svg/symbols/mesothelioma.svg') no-repeat center
        background-size 600px
        background-position: 25% 50%
        top 0
        left 0

  .background
    align(both)
    opacity: 0.05
    max-width: 100%
    height: 100%
    transition: trns-default

    +above(2)
      height 80%
      top 45%
      left 35%
      max-width: 70%

    +above(3)
      height: 100%
      max-width: 100%
      top 50%

    +above(4)
      left 38%

  .container
    center(42rem)
    +above(2)
      center(46rem)
      margin-left: 35%
    +above(3)
      margin-left: 50%

    +above(4)
      center(64rem)
      margin-left: 50%
      top 20%

  h2
    font-family: museo-500
    text-align: center
    fs(3.3)
    line-height: 1
    margin-bottom: 35px
    margin-top: 10px
    +above(2)
      fs(4.4rem)
      line-height: (56/44)
      text-align: left

  .button--arrow
    display: block
    max-width: 200px
    margin 35px auto
    +above(2)
      margin-left: 0

  .right-arrow
      position: absolute
      max-width: 25px
      top 25%
      right 10%

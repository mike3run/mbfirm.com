#icon-navigation
  background blue
  color white
  text-align: center
  display: none
  +above(3)
    display: block

  span
    font-family: lato-light
    fs(1.8rem)
    line-height: (22/18)

  .icon
    max-width: 52px
    max-height: 52px
    margin-bottom: 25px

  .options
    cf()
    padding-top: 90px
    padding-bottom: 90px

  .container
    +above(3)
      max-width: 90%

  .option
    cf()
    column(1/7)
    cursor pointer
    opacity: 0.2
    transition trns-default

    +is(active)
      opacity 1

*
	-webkit-tap-highlight-color rgba(0,0,0,0)
	box-sizing border-box
	&:before,
	&:after
		box-sizing border-box
	&:focus
		outline none

html
	font-size 10px
	-webkit-font-smoothing initial
	font-smoothing initial
	// text-rendering optimizeLegibility
	font-smooth always
	font-family bodyfont
	position relative

body
	-webkit-touch-callout none
	-webkit-text-size-adjust none
	color black
	height 100%
	transition opacity 0.1s ease
	&.is-active
		opacity: 1 !important
i
	display inline-block
	vertical-align middle
	font inherit

img,
video,
iframe,
object,
embed,
svg
	display block
	width 100%
	margin-left auto
	margin-right auto

.is-hidden
	position: absolute
	height: 0
	width: 0
	visibility: hidden

::selection
	background-color: blue
	color white
